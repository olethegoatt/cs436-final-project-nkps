@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="mb-3">
                    <label for="username" class="form-label text-dark">Username</label>
                    <div class="form-floating">
                        <input asp-for="Input.UserName" class="form-control" id="username" autocomplete="username" aria-required="true" />
                        <label for="username" class="text-dark">Enter your username</label>
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label text-dark">Password</label>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" id="password" autocomplete="current-password" type="password" aria-required="true" />
                        <label for="password" class="text-dark">Enter your password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <button id="login-submit" type="submit" class="btn btn-primary btn-lg">Log in</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
